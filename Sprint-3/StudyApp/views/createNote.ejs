<!DOCTYPE html>
<html>
<head>
  <script src='https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=7crc7id62nu3jrhjk61274hjiqe1zope3wz7gnuk1amdw6n0'></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <script>
  tinymce.init({
    selector: '#mytextarea',
    plugins: "textcolor lists table wordcount",
    toolbar: "forecolor backcolor numlist bullist table",
    height: "400"
  });
  </script>
  
  <script>
    $(document).ready(function() {
      $("#note-form").submit(function(e) {
        console.log("Button pushed");
        var content = tinymce.get('mytextarea').getContent();
        console.log(content);
      });
    });
  </script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Study App</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/menu">Notes</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/">Flashcards</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/timer">Timer</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if(user){ %>
            <li class="nav-item active">
              <a class="nav-link" href="#">Signed In As <%= user.username %></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
  </nav>
  
  <center>
    <h1 class="mt-3">Create a Note</h1>
  </center>

  <center> 
    <form id="note-form" action="/notes" method="POST">
      <div class="input-group mb-3 w-25 p-3">
        <input type="text" class="form-control" name="title" placeholder="Title" aria-label="Title" aria-describedby="basic-addon1">
      </div>

      <textarea name="content" id="mytextarea"></textarea>
      <input type="submit" class="btn btn-success btn-lg mt-3 w-25" id="donebtn" value='Save'>
    </form>
    
  </center>
</body>
</html>