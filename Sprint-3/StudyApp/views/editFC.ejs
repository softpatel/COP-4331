<!DOCTYPE html>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <script>
        function hideShow() {
        var x = document.getElementById("back");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
  </script>
</head>

<body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Study App</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="/menu">Notes</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/flashcards">Flashcards</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/timer">Timer</a>
                </li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <% if(user){ %>
                  <li class="nav-item active">
                    <a class="nav-link" href="#">Signed In As <%= user.username %></a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="/logout">Logout</a>
                  </li>
                <% } %>
              </ul>
            </div>
        </nav>

  <center>
    
    <h1 class="m-4">Edit Flashcard:</h1>
    
    <form id="flashcard-form" action="/flashcards/<%=flashcard._id%>?_method=PUT" method="POST">
      <label for="title">Title</label>
      <br>
      <input type="text" id="title" name="title" value="<%= flashcard.title %>">
      <br>
      <br>
      <label for="front">Front</label>
      <br>
      <textarea rows="10" cols="80" class="mt-3" name="front" id="front" rows="6"><%= flashcard.front %></textarea>
      <br>
      <label for="back">Back</label>
      <br>
      <textarea rows="10" cols="80" class="mt-3" name="back" id="back" rows="6"><%= flashcard.back %></textarea>
      <br>
      <input class="btn btn-primary mt-3" type="submit" id="donebtn" value='Save'>
    </form>
    
    <br>
      <button class="btn btn-info" onclick="hideShow()">Hide/Show Back</button>
    <br>

    <form action="/deleteCard/<%= flashcard._id %>?_method=DELETE" method="POST">
      <button class="btn btn-primary mt-3">Delete Flashcard</button>
    </form>
    <br>
</body>